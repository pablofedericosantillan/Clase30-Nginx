    <input type="text" id="name" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu nombre">
    <input type="text" id="apellido" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu apellido">
    <input type="number" id="edad" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu edad">
    <input type="text" id="alias" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu alias">
    <input type="url" id="avatar" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu avatar (url)">
    <hr>
        </form>
    <div id="mensajes"></div>

    <form id="centro-mensajes" class="form-inline mt-3" onsubmit="addMessage(event)" autocomplete="off">
